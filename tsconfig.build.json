{
  "extends": "./tsconfig.settings.json",
  "compilerOptions": {
    "declaration": true,
    "lib": [
      "ESNext",
      "DOM"
    ],
    "tsBuildInfoFile": "dist/.tsbuildinfo",
    "rootDir": "./src",
    "baseUrl": ".",
    "outDir": "./dist"
  },
  "exclude": [
    "dist",
    "src/**/*.test.ts",
    "src/**/*.test.tsx",
    "src/**/*.spec.ts",
    "src/**/*.spec.tsx"
  ],
  "include": [
    "src/**/*.ts",
    "src/**/*.tsx"
  ]
}
