{
  "name": "lstate",
  "description": "A simple, super-efficient and small (just 2.1kb) global state and router for React/Typescript applications",
  "version": "2.0.0",
  "private": false,
  "main": "dist/index.js",
  "types": "dist/index.d.ts",
  "devDependencies": {
    "@testing-library/jest-dom": "^5.16.2",
    "@testing-library/react": "^12.1.2",
    "@testing-library/react-hooks": "^7.0.2",
    "@types/jest": "^27.4.0",
    "@types/react": "^17.0.39",
    "@types/react-dom": "^17.0.11",
    "@types/source-map-support": "^0.5.4",
    "@typescript-eslint/eslint-plugin": "^5.11.0",
    "@typescript-eslint/parser": "^5.11.0",
    "dts-bundle-generator": "^6.5.0",
    "esbuild": "^0.14.20",
    "esbuild-jest": "^0.5.0",
    "eslint": "^8.8.0",
    "eslint-config-standard": "^16.0.3",
    "eslint-plugin-import": "^2.25.4",
    "eslint-plugin-node": "^11.1.0",
    "eslint-plugin-promise": "^6.0.0",
    "eslint-plugin-react": "^7.28.0",
    "jest": "^27.5.0",
    "pjobs": "^1.1.3",
    "react-dom": "^17.0.2",
    "react-testing-library": "^8.0.1",
    "source-map-support": "^0.5.21",
    "ts-jest": "^27.1.3",
    "typescript": "^4.5.5"
  },
  "scripts": {
    "build": "./build.sh",
    "buildDTS": "dts-bundle-generator --project ./tsconfig.build.json src/index.ts -o dist/index.d.ts",
    "buildWithEsbuild": "esbuild --bundle src/index.ts --external:react --minify --platform=node --format=esm --outfile=dist/index.js",
    "buildWithTSC": "tsc -p ./tsconfig.build.json",
    "test": "jest",
    "prepublishOnly": "yarn buildWithEsbuild && yarn test && yarn build",
    "test-coverage": "jest --coverage",
    "lint": "eslint --config .eslintrc.js src/**/*.ts",
    "lint-fix": "eslint --fix --config .eslintrc.js src/**/*.ts"
  },
  "dependencies": {
    "react": "^17.0.2"
  }
}
